
 # checkout app:
   git clone git://github.com/marek-saji/nyopaste.git src/

 # update local, dev and test IPs/hostnames
   edit src/app/htdocs/index.php

 # checkout hologram:
   git clone git://git.holonglobe.com/hologram.git src/hg/

 # prepare upload directory:
   mkdir -m 0700 upload/
   chown www-data:www-data upload/

 # local configuration
   # database credentials
     cp src/app/conf/conf.db.php conf/
     edit conf/conf.db.php
   # API keys
     cp src/app/conf/conf.keys.php conf/
     edit conf/conf.keys.php

 # configure apache
   # create vhost pointing to $PWD/src/app/htdocs/
   # create alias 'hg/' poining to $PWD/src/hg/htdocs/
   # allow .htaccess magic tricks
   # make sure mod_rewrite is on

 # http://host.name/, enable favourite debugs

 # head to /DataSet/list and create these models:
   # Lang
   # User

 # head to /Dev and launch these actions:
   # addDefaults, updated 2010-05-29

